{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2016",
      "dom",
      "dom.iterable"
    ],
    "types": [
      "@types/chrome"
    ],
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "isolatedModules": true,
    "downlevelIteration": true
  },
  "include": [
    "source/**/*"
  ],
  "exclude:": [
    "node_modules",
    "dist",
  ]
}
